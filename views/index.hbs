					<div class="section_title new_arrivals_title">
						<h2>New Arrivals</h2>
					</div>
				</div>
			</div>

			{{# each products }}
			<div class="row">
			
				<div class="col">
					<div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

						<!-- category 1 -->
						{{# each this }}
						<div class="product-item men">
							<div class="product discount product_filter">
								<div class="product_image ">
									<a href="/product-description-index/{{this._id}}"> <img src="{{ this.imagePath }}" alt=""> </a>
								</div>
								<div class="favorite favorite_left"></div>
								<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-Rs20</span></div>
								<div class="product_info">
									<h6 class="product_name">{{ this.title }}</h6>
									<div class="product_price">Rs {{ this.price }}<span>Rs 590.00</span></div>
								</div>
							</div>
							<div class="red_button add_to_cart_button"><a href="/add-to-cart-index/{{this._id}}">add to cart</a></div>
						</div>
						{{/each}}
					</div>
				</div>
				
			</div>
			{{/each}}

		</div>
	</div>

