<div class="user-form">
	<div class="row">
		<div class="col-md-6 col-md-offset-2 center">
		 <div class="card " >
    <div class="card-body ">
   <h3 class="text-center"> Change Your Password</h3>

			<form  class="forma"  action="/users/reset/{{token}}" method="POST">
				<div class="form-group">
						<label for="password"> New password </label>
						<input type="password" id="password" name="password"  class="form-control">
				</div>

				<div class="form-group">
						<label for="cp"> Confirm password </label>
						<input type="password" id="cp" name="confirm_password"  class="form-control">
				</div>

				<input type="hidden" name="_csrf" value="{{ csrfToken }}">
				<input type="submit"   name="forgot" class="btn btn-primary">
			</form>
		</div>
	</div>
</div>

</div>
</div>