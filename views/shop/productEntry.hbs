<div class="user-form">
<div class="row center">
	<div class="col-md-4 col-md-offset-6 center ">
	 <div class="card " >
    <div class="card-body ">
    <h2 class="card-title text-center">Product Details</h2>
		
			
			<form  class="forma"  action="/users/productEntry" method="POST">

					<div class="form-group">
						<label for="name"> Image Path </label>
						<input type="text" id="name" name="imagePath"  class="form-control"  required>
					</div>

					<div class="form-group">
						<label for="mobile">Title </label>
						<input type="text" id="mobile" name="title"  class="form-control" required>
					</div>

					<div class="form-group">
						<label for="mobile">Price </label>
						<input type="text"  name="price"  class="form-control" required>
					</div>

					<div class="form-group">
						<label for="mobile">ISBN 10 </label>
						<input type="text"  name="isbn10"  class="form-control" required>
					</div>


					<div class="form-group">
						<label for="mobile">ISBN 13 </label>
						<input type="text"  name="isbn13"  class="form-control" required>
					</div>


					<div class="form-group">
						<label for="mobile">Discount </label>
						<input type="text"  name="discount"  class="form-control" required>
					</div>


					<div class="form-group">
						<label for="mobile">Author</label>
						<input type="text"  name="author"  class="form-control" required>
					</div>

					<div class="form-group">
						<label for="mobile">Quantity</label>
						<input type="text"  name="quantity"  class="form-control" required>
					</div>


					<div class="form-group">
						<label for="mobile">Paperback</label>
						<input type="text"  name="paperback"  class="form-control" required>
					</div>

					<div class="form-group">
						<label for="mobile">Language</label>
						<input type="text"  name="language"  class="form-control" required>
					</div>


					<div class="form-group">
						<label for="mobile">Description</label>
						<input type="text" rows="4" cols="4"  name="description"  class="form-control" required>
					</div>

					<div class="form-group">
						<label for="mobile">Publisher</label>
						<input type="text"  name="publisher"  class="form-control" required>
					</div>


					<div class="form-group">
						<label for="mobile">Category</label>
						<input type="text"  name="category"  class="form-control" required>
					</div>



					<input type="hidden" name="_csrf" value="{{ csrfToken }}">
					<input type="submit" name="Submit" class="btn btn-primary">
					
			</form>
		</div>
</div>

</div>


</div>
</div>
