
<div class=" conatiner user-form">


<div class="row">
<div class="col-md-6 col-md-offset-2 center">
	<div class="card " >
    <div class="card-body ">
    <h2 class="card-title text-center">Complete Your Order</h2>
			
			<form  class="forma"  action="/checkout" method="POST">

					<div class="form-group">
						<label for="name"> Full Name </label>
						<input type="text" id="name" name="name"  class="form-control"  required>
					</div>

					<div class="form-group">
						<label for="mobile"> Mobile Number </label>
						<input type="text" id="mobile" name="mobile"  class="form-control"   minlength="10" maxlength="10" required>
					</div>

					<div class="form-group">
						<label for="address"> Address </label>
						<input type="text" id="address" name="address"  class="form-control" required>
					</div>

					<div class="form-group">
						<label for="city"> City </label>
						<input type="text" id="city" name="city"  class="form-control" required>
					</div>

					<div class="form-group">
						<label for="state"> State </label>
						<input type="text" id="state" name="state"  class="form-control" required>
					</div>
					
					<div class="form-group">
						<label for="pincode"> pincode </label>
						<input type="number" id="city" name="pincode"  class="form-control" required>
					</div>
						<input type="hidden" name="_csrf" value="{{ csrfToken }}">
						<button type="submit" id="cod"  name="submit" class="btn btn-primary">Place order</button>
					
			</form>
		</div>
</div>

</div>

</div>

</div>